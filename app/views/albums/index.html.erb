<div id='main-content'>
  <div class='container'>
    <h1>Your Account</h1>   
    <div class='col-md-4'> 

      <h3>Contact Info:</h3>
      <ul>
        <li>First Name: <%= @current_user.first_name %></li>
        <li>Last Name: <%= @current_user.last_name %></li>
        <li>Email: <%= @current_user.email %></li>
        <li>Phone: <%= @current_user.phone_number %></li>
        <!-- <td><button><%= link_to "Edit Contact Info", "/admin/users/#{@current_user.id}/edit" %></button></td> -->
      </div>

      <div class='col-md-4'>
        <h3>Your Albums</h3>
        <% @current_user.albums.each do |album|%>
        <div class="album">
          <%= link_to album.name, "/albums/#{album.id}" %>
        </div>
        <% end  %>
      </div>

      <div class='col-md-4'>
        <h3>Favorited Photos</h3>
        <% if current_user.favorite_photos.any? %>
        <table class="table">
          <tr>
            <th>Photos</th>
            <th></th>
          </tr>
          <% current_user.favorite_photos.each do |favorite_photo| %>
            <% favorite_photo.photo_id %>
          <tr>
            <td><%= link_to favorite_photo.photo.name.medium, :target => 'new' %></td>
            <td><%= link_to "Remove From Favorites", "/favorite_photos/photos/#{favorite_photo.photo_id}", method: :delete %></td>
          </tr>
          <% end %>
        </table>
        <% else %>
        <p>You currently have no favorite photos.</p>
        <% end %>
      </div>

