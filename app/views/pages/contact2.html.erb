<div id='main-content'>
  <div class='container'>
    <h1>Contact Me</h1>
    <form class="form form-validation form-contact" method="post" novalidate="novalidate">
      
      <div class='row'>
        <div class="col-sm-6">
          <%= form_tag("/contact", method: "post") do %>
          
          <div class="form-group control-group">
              <%= label_tag(:name) %>
              <%= text_field_tag(:name) %>
            </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group control-group">
              <%= label_tag(:email) %>
              <%= text_field_tag(:email) %>
              
            </div>
            </div>
            
            <div class="row">
              <div class="col-sm-12">
                <%= label_tag(:message) %>
                <%= text_area_tag(:message) %>
              </div>
                <%= submit_tag("Send message") %>
                <% end %>
            </div>
          </div>
      


      </div>
      </div>
    </form>
  </div>
</div>